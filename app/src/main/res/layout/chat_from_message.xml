<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/text_from_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a test :DDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintStart_toEndOf="@+id/chat_from_image"
        app:layout_constraintTop_toTopOf="@+id/chat_from_image"
        android:padding="12dp"
        android:background="@drawable/chat_sent_message_rounded"
        android:maxWidth="240dp"
        android:layout_marginLeft="4dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_from_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_from_message_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="Received"
        android:textSize="12sp"
        android:fontFamily="@font/outfit_regular"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_from_message"
        app:layout_constraintTop_toBottomOf="@+id/text_from_message" />

</androidx.constraintlayout.widget.ConstraintLayout>