<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_from_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a test :DDDDDDDDDDDDDDDDDDDDDDDDDDDDD"
        app:layout_constraintStart_toEndOf="@+id/chat_from_image"
        app:layout_constraintTop_toTopOf="@+id/chat_from_image"
        android:padding="12dp"
        android:background="@drawable/chat_received_message_rounded"
        android:maxWidth="240dp"
        android:layout_marginLeft="4dp" />

    <ImageView
        android:id="@+id/chat_from_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>