    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_editText_login_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="@string/password_editText_register"
        app:layout_constraintEnd_toEndOf="@id/username_editText_login_layout"
        app:layout_constraintStart_toStartOf="@id/username_editText_login_layout"
        app:layout_constraintTop_toBottomOf="@id/username_editText_login_layout"
        app:boxStrokeWidth="1dp"
        app:boxStrokeColor="@color/black"
        app:hintAnimationEnabled="true"
        app:hintTextColor="@color/black"
        tools:override="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_editText_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/black"
            android:inputType="text"
            android:textCursorDrawable="@color/black"/>

    </com.google.android.material.textfield.TextInputLayout>

