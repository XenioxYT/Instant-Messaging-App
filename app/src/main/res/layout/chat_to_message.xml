<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/text_to_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a test :"
        app:layout_constraintEnd_toStartOf="@+id/chat_to_image"
        app:layout_constraintTop_toTopOf="@+id/chat_to_image"
        android:padding="12dp"
        android:background="@drawable/chat_sent_message_rounded"
        android:maxWidth="240dp"
        android:layout_marginRight="4dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_to_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>