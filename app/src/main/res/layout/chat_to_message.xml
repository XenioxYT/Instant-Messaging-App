<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/text_to_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a test :"
        android:textColor="@color/black"
        android:fontFamily="@font/outfit_regular"
        app:layout_constraintEnd_toStartOf="@+id/chat_to_image"
        app:layout_constraintTop_toTopOf="@+id/chat_to_image"
        android:padding="12dp"
        android:layout_marginRight="4dp"
        android:maxWidth="240dp"
        android:background="@drawable/chat_received_message_rounded" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_to_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/text_to_message_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sent:"
        android:textSize="12sp"
        android:fontFamily="@font/outfit_regular"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_to_message"
        app:layout_constraintTop_toBottomOf="@+id/text_to_message" />

</androidx.constraintlayout.widget.ConstraintLayout>